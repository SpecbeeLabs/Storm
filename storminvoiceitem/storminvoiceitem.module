function storminvoiceitem_access($op, $node, $account=NULL) {
  if (empty($account)) {
    global $user;
    $account = $user;
  }

  if (is_numeric($node)) $node = node_load($node);

  if ($op == 'create') {
    return user_access('Storm invoice: add');
  }

  if ($op == 'delete') {
    if (user_access('Storm invoice: delete all')) {
      return TRUE;
    }
    else if (user_access('Storm invoice: delete own') && ($account->uid == $node->uid)) {
      return TRUE;
    }
  }

  if ($op == 'update') {
    if (user_access('Storm invoice: edit all')) {
      return TRUE;
    }
    else if (user_access('Storm invoice: edit own') && ($account->uid == $node->uid)) {
      return TRUE;
    }
  }

  if ($op == 'view') {
    $invoice = node_load($node->invoice_nid);
    if (storminvoice_access('view', $invoice, $account) && user_access('Storm invoice: view all')) {
      return TRUE;
    }
    else if (storminvoice_access('view', $invoice, $account) && user_access('Storm invoice: view own') && ($account->uid == $node->uid)) {
      return TRUE;
    }
  }
  return FALSE;
}

function storminvoiceitem_access_sql($sql, $where = array()) {
  global $user;

  $cond = '';
  $join[] = 'INNER JOIN {node} n2 ON sin.nid=n2.nid';
  $join[] = 'INNER JOIN {storminvoice} sin ON sin.nid=sit.invoice_nid';
  if (user_access('Storm invoice: view all')) {
    $cond = '1=1';
  }
  else {
    if (user_access('Storm invoice: view own')) {
      $cond = 'n2.uid='. $user->uid;
    }
    if (user_access('Storm invoice: view of user organization')) {
      if (!empty($cond)) $cond .= ' OR ';
      $cond .= 'sin.organization_nid='. $user->stormorganization_nid;
    }
  }
  if (empty($cond)) $cond = '0=1';
  $where[] = $cond;
  
  if (user_access('Storm invoice: view all')) {
    $where[] = "'storm_access'='storm_access'";
    return storm_rewrite_sql($sql, $where);
  }

  $cond = '';
  if (user_access('Storm invoice: view own')) {
    $cond .= 'n.uid='. $user->uid;
  }
  if (empty($cond)) $cond = '0=1';
  $where[] = $cond;

  $where[] = "'storm_access'='storm_access'";
  return storm_rewrite_sql($sql, $where, $join);
}

function storminvoiceitem_storm_rewrite_where_sql($query, $primary_table, $account) {
  static $conds = array();

  if ($conds[$primary_table][$account->uid]) {
    return $conds[$primary_table][$account->uid];
  }

  if (preg_match("/'storm_access'='storm_access'/", $query)) {
    $cond = '';
  }
  else {
    if (user_access('Storm invoice: view all', $account)) {
      return '';
    }

    $cond = '';
    if (user_access('Storm invoice: view own', $account)) {
      $cond .= " ${primary_table}.uid=". $account->uid;
    }
    if ($cond) {
      $cond = " WHEN 'storminvoiceitem' THEN (SELECT IF($cond,1,0) FROM {storminvoiceitem} sit1 WHERE sit1.vid=${primary_table}.vid) ";
    }
    else {
      $cond = " WHEN 'storminvoiceitem' THEN 0 ";
    }
  }

  $conds[$primary_table][$account->uid] = $cond;
  return $cond;
}

