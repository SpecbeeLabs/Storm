{#
/**
 * @file
 * Default theme implementation to display a two-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'l-container',
    'l-container--onecol',
    content['#settings']['background_color']
  ]
%}
{# Set the title variables #}
{% set title = content['#settings']['heading'] %}
{% set heading_style = content['#settings']['heading_style'] %}

{% if content %}
  <div{{attributes.addClass(classes)}}>
    <{{heading_style}} class="c-title c-title--{{ content['#settings']['heading_alignment'] }}">
      {{ title }}
    </{{heading_style}}>

    <div{{attributes.addClass(class)}}>
      {% if content.first %}
        <div {{ region_attributes.first.addClass('l-grid__item', 'l-grid__item--first') }}>
          {{ content.first }}
        </div>
      {% endif %}

      {% if content.second %}
        <div {{ region_attributes.second.addClass('l-grid__item', 'l-grid__item--second') }}>
          {{ content.second }}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
