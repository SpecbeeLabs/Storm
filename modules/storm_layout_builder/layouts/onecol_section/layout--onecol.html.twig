{#
/**
 * @file
 * Default theme implementation to display a one-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{%
  set classes = [
    'l-container',
    'l-container--onecol',
    content['#settings']['background_color']
  ]
%}

{# Set the title variables #}
{% set title = content['#settings']['heading'] %}
{% set heading_style = content['#settings']['heading_style'] %}

{% if content %}
  <div{{attributes.addClass(classes)}}>
    <{{heading_style}} class="c-title c-title--{{ content['#settings']['heading_alignment'] }}">
      {{ title }}
    </{{heading_style}}>
    <div {{ region_attributes.content.addClass('l-grid', 'l-grid--content') }}>
      {{ content.content }}
    </div>
  </div>
{% endif %}
