{#
/**
 * @file
 * Default theme implementation for a three-column layout.
 *
 * Available variables:
 * - content: The content for this layout.
 * - attributes: HTML attributes for the layout <div>.
 *
 * @ingroup themeable
 */
#}
{# Set the title variables #}
{% set title = content['#settings']['heading'] %}
{% set heading_style = content['#settings']['heading_style'] %}

{% if content %}
  <div class='l-container l-container--threecol'>
    <{{heading_style}} class="c-title c-title--{{ content['#settings']['heading_alignment'] }}">
      {{ title }}
    </{{heading_style}}>

    <div{{attributes.addClass(classes)}}>
      {% if content.first %}
        <div {{ region_attributes.first.addClass('l-grid__item', 'l-grid__item--first') }}>
          {{ content.first }}
        </div>
      {% endif %}

      {% if content.second %}
        <div {{ region_attributes.second.addClass('l-grid__item', 'l-grid__item--second') }}>
          {{ content.second }}
        </div>
      {% endif %}

      {% if content.third %}
        <div {{ region_attributes.third.addClass('l-grid__item', 'l-grid__item--third') }}>
          {{ content.third }}
        </div>
      {% endif %}
    </div>
  </div>
{% endif %}
